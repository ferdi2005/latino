<% provide(:title, "Classifica") %>
<h1 class="title is-1">Classifica</h1>
<table class="table is-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Punti</th>
        </tr>
    </thead>
    <tbody>
        <% User.order(points: :desc).each do |user| %>
            <tr>
                <td><%= user.email[0..4] %></td>
                <td><%= user.points %></td>
            </tr>
       <% end %>
    </tbody>
</table>
